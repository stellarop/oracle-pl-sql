CREATE OR REPLACE PROCEDURE SP_JOB_LOG
IS
 	V_CODE JOB_LOG.JOB_CODE%TYPE;
 	V_ERRM JOB_LOG.JOB_ERRM%TYPE;
BEGIN
	V_CODE := 0;
 	V_ERRM := '정상 실행';
 
	INSERT INTO JOB_LOG(JOB_ACTION, REG_DAY, JOB_CODE, JOB_ERRM) VALUES ('SP_JOB_LOG', SYSDATE, V_CODE, V_ERRM);

EXCEPTION WHEN OTHERS THEN
	V_CODE := SQLCODE;
	V_ERRM := SQLERRM;
	INSERT INTO JOB_LOG(JOB_ACTION, REG_DAY, JOB_CODE, JOB_ERRM) VALUES ('SP_JOB_LOG', SYSDATE, V_CODE, V_ERRM); 
	Raise_Application_Error(-20000, '[SP_JOB_LOG] - 배치 실행 중 오류 발생'); 
END SP_JOB_LOG;
